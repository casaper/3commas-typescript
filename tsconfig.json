{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "lib": ["ES2021", "ES2020", "ES2019", "ES2018"],
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  }
}
